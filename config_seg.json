/* Object_detection  */
{
    "name": "Semantic_Segmentation",
    "type": "Segmentation", /* Classefication, Segmentation*/
    "seed": 2109,
    "n_gpu": 1,
    "save": false,
    "batch_size": 8,
    "num_workers": 4,
    "fold_split": 5,
    "debug": {
        "set_debug": true,
        "ratio" : 0.2  /* data__split -> 0.2 : data 20% using */
    },
    "data_set":{
        "type": "CustomSegDataSet",
        "args": {
            "data_dir": "/opt/ml/segmentation/input/data/train_all.json"
        }
    },
    "Net": {
        "type": "SetSegmentationTorchvision",
        "args": {
            "model_name": "fcn_resnet101",
            "num_classes": 11
        }
    },
    "transform":{
        "type": "CustomTransForm_seg",
        "args": {
            "mean": [0.460, 0.440, 0.418],
            "std": [0.210, 0.207, 0.216],
            "resize": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        /*"accuracy", "top_k_acc"*/
    ],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [10, 15, 20, 25, 30, 35, 40, 45],
            "gamma": 0.05
        }
    },
    "trainer": {
        "epochs": 5,
        "save_dir": "logs/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false
    }
}

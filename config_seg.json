/* Object_detection  */
{
    "name": "Semantic_Segmentation",
    "type": "Segmentation", /* Classefication, Segmentation*/
    "seed": 2109,
    "n_gpu": 1,
    "save": false,
    "batch_size": 8,
    "num_workers": 4,
    "shuffle": true,
    "fold_split": 5,
    "debug": {
        "set_debug": true,
        "ratio" : 0.2  /* data__split -> 0.2 : data 20% using */
    },
    "data_set":{
        "type": "CustomSegDataSet",
        "args": {
            "data_dir": "/opt/ml/segmentation/input/data/train_all.json"
        }
    },
    "Net": {
        "type": "HRNetV2",
        "args": {
            "num_classes": 11,
            "W": 48
        }
    },
    "transform":{
        "type": "CustomTransForm_seg",
        "args": {
            "mean": [0.460, 0.440, 0.418],
            "std": [0.210, 0.207, 0.216],
            "resize": 0
        }
    },
    "loss":{
        "type": "FocalLoss",
        "args" :{
            "gamma": 2.0
        }
    }, 
    "metrics": [
        /*"accuracy", "top_k_acc"*/
    ],
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max" : 50,
            "eta_min": 0
        }
    },
    "trainer": {
        "epochs": 5,
        "save_dir": "logs/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false
    }
}
